.mobile-search
  margin-top 16px
  height 40px

  .search-bar
    height 40px
    display flex
    align-items center
    background-color #fff
    border-radius 4px
    overflow hidden

    .ant-select-auto-complete
      &.ant-select
        flex 1
        .ant-input
          border 0

    .search-icon
      background-color $white
      height 40px
      color #fff
      line-height 40px
      font-size 16px
      font-weight 700
      padding 0 0 0 12px

      img
        height 15px
        width 15px


@media screen and (max-width: 1200px)
  .search-result
    h1
      font-size 12px
      color #999999
      margin 16px 0 15px
    .search-results
      display flex
      justify-content space-between
      flex-wrap wrap
      div
        width calc((100% - 12px)/2)
        height 32px
        background-color  #e2e8ed
        line-height 32px
        font-size 12px
        padding 0 8px
        box-sizing border-box
        overflow hidden
        text-overflow ellipsis
        margin-bottom 12px
        color #999999

