.search-item
  padding 20px
  background-color $white
  border-radius 10px
  margin-top 20px
  display flex
  align-items center

  .ant-input-group
    display flex !important
    align-items center
    flex 1
    .ant-select
      margin-top 1px
      .ant-select-selection
        width 88px
        height 50px
        border-top-left-radius 10px !important
        border-bottom-left-radius 10px !important
        &:hover
          border-color $main-color

        .ant-select-selection__rendered
          line-height 50px

          .ant-select-selection-selected-value
            color $lapis-blue

    .ant-input-affix-wrapper
      .ant-input
        border-top-right-radius 10px !important
        border-bottom-right-radius 10px !important

      .ant-select-arrow
        color $lapis-blue

    .ant-calendar-picker
      flex 1
      .ant-calendar-picker-input
        border-top-right-radius 10px !important
        border-bottom-right-radius 10px !important

      .ant-calendar-range-picker-separator
        vertical-align unset

    .search-item-to
      border-left 0

    .ant-input.search-item-from, .ant-input.search-item-to
      border-top-right-radius 10px
      border-bottom-right-radius 10px

    .ant-input-group-wrapper
      .ant-input-group-addon
        display inline-block
        width 20px
        height 50px
        line-height 50px
        padding 0 2px
        background-color $white
        border-radius 0

      .ant-input
        border-right 0

  .ant-input
    display inline-block
    height 50px
    border-radius 0

  .search-item-fork
    padding 0 10px
    flex 1
    .ant-input
      border-radius 10px

  .search-item-btn
    text-align right
    .ant-btn
      height 50px
      border-color $slate-blue
      background-color $slate-blue
      color $white
      border-radius 10px
      span
        width 100px

.ant-calendar-range
  .ant-calendar-in-range-cell:before
    background-color #D4E1FF !important

@media screen and (max-width: 1200px)
  .search-item
    padding 12px
    border-radius 4px
    margin-top 16px
    display block

    .search-item-fork
      padding 12px 0 12px 88px

      .ant-input
        border-radius 4px
    .ant-input
      height 40px
    .ant-input-group
      .ant-select
        .ant-select-selection
          height 40px
          border-top-left-radius 4px !important
          border-bottom-left-radius 4px !important

          .ant-select-selection__rendered
            line-height 40px

            .ant-select-selection-selected-value
              font-size 12px

      .ant-input
        &.search-item-from
          border-top-right-radius 4px !important
          border-bottom-right-radius 4px !important

        &.search-item-to
          border-top-right-radius 4px !important
          border-bottom-right-radius 4px !important

      .ant-input-group-wrapper
        .ant-input-group-addon
          height 40px
          line-height 40px

      .ant-input-affix-wrapper
        .ant-input
          border-top-right-radius 4px !important
          border-bottom-right-radius 4px !important

    .search-item-btn
      .ant-btn
        height 24px
        border-radius 3px
        width 60px
        padding 0
        font-size 12px

        span
          width 60px
