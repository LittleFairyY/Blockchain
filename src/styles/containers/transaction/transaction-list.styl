.transaction-list-content
  background-color $white
  padding 30px 20px 0px
  border-radius 24px
  margin 20px 0 40px

  &.node-list-content
    margin-bottom 16px

  .blocks-title
    display flex
    justify-content space-between
    font-size 16px
    color#333333
    font-weight 600
    align-items center

    >div
      display flex
      align-items center

      .mobile-height
        color #999999
        margin-left 12px

    img
      width 28px
      height 28px
      margin-right 12px

    .list-icon
      display flex
      align-items center

      .transaction-list-font
        color #999
        font-size 14px
        margin-left 6px
        font-weight 400

      img
        margin-top -4px

    span
      &:last-child
        color #808080
        float right
        font-size 12px

    .node-search-wrapper
      display flex
      width 400px

      .ant-input-affix-wrapper
        .ant-input
          border-radius 8px
          border-top-right-radius 0 !important
          border-bottom-right-radius 0 !important

      .ant-btn
        background-color #32519c
        border-radius 8px
        height 40px
        border-top-left-radius 0 !important
        border-bottom-left-radius 0 !important
        > span
          color $white
          font-size 14px

    .node-submit-wrapper
      display flex
      align-items center
      .anticon-question-circle
        font-size 14px
        color #122075
        margin .5px 4px 0 0

      > a
        color $blue2
        font-size 14px
        font-weight normal

    .time_filter
      display flex
      align-items center
      .time_filter-title
        padding-right 12px
        color #122075
        font-size 7px
      .ant-calendar-picker
        .ant-calendar-picker-input
          color #32519c
          cursor pointer

    &.node-view-title
      .list-icon
        display flex
        align-items center
        span
          font-size 16px
          color #00D0C3
          &:first-of-type
            cursor pointer
          &:last-of-type
            color $simple-grey
            padding-left 4px

      .blocks-title-info
        color #050d3f
        font-size 14px
        & > div:last-of-type
          padding-top 4px

  .transaction-list-content-table
    margin-bottom 15px
    padding-bottom 30px

    .table-rank
      width 28px
      height 28px

    .table-rank-other
      width 28px
      height 28px
      border-radius 50%
      background-color #FAFAFA
      line-height 28px
      text-align center
      color #999999
      font-size 16px

    .ant-table-thead
      >tr
        > th
          background-color $white
          border-bottom 1px solid #E8F0EC
          color #999
          padding-left 0
          font-weight 600
          font-size 14px
          padding 15px 0 24px
          padding-right 20px

          &:last-child
            padding-right 0

    .ant-table-tbody
      > tr
        &:nth-child(-n+4)
          td
            color #333
        &:hover
          &:not(.ant-table-expanded-row)
            td
              background-color #fff

        >td
          padding-left 0
          color #999
          font-size 14px
          font-weight 400
          padding-right 20px
          border-bottom 1px solid #f5f5f5

          &:last-child
            padding-right 0

          &.td-color
            color $blue2

          .text-hidden
            overflow hidden
            text-overflow ellipsis
            cursor pointer
            &.no-link
              cursor unset
              color #666

          .text-normal
            cursor unset
            color #666

          .view-btn
            color $blue2
            cursor pointer

    .ant-table-placeholder
      border-bottom 0

  &.node-list-content,
  &.node-falternate-list-content
    .transaction-list-content-table
      .ant-table-thead
        > tr
          > th
            background-color #fff

            &:last-child
              padding-right 0

          > th:not(:last-of-type)
            padding 0

      .ant-table-tbody
        > tr
          > td:not(:last-of-type)
            padding-right 14px

      .text-wrap
        word-break break-all
        vertical-align middle
        cursor pointer

.mobile-table
  display none

@media screen and (max-width: 1200px)
  // .node-info
