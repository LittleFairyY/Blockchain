  .transaction
    margin-top 12px
    margin-bottom 163px
    height auto !important

    .transaction-list-font
      font-size 12px
      margin-left 8px

  .transaction-list-content
    margin 0
    padding 0 !important
    border-radius 12px

    .ant-table
      table
        width 1100px

    .mobile-transaction-table
      .transaction-list-content-table
        margin-top 0

    .transaction-list-content-table
      padding-bottom 0
      margin-bottom 18px

      .ant-table-body
        overflow auto

        tr
          td
            padding-left 12px
            padding-right 12px
            font-size 13px

            &:last-child
              padding-right 12px

          th
            padding-left 12px
            padding-right 12px
            padding-top 0
            background-color #fffff

            &:last-child
              padding-right 12px


    &.node-list-content
    &.node-falternate-list-content
      .transaction-list-content-table
        .ant-table-thead
          > tr
            > th:not(:last-of-type)
              padding-right 4px
            > th:not(:first-of-type)
              padding-left 4px
        .ant-table-tbody
          > tr
            > td:not(:last-of-type)
              padding-right 4px
            > td:not(:first-of-type)
              padding-left 4px

    .blocks-title
      padding 14px 12px
      margin-bottom 0
      font-size 13px

      .mobile-height
        font-size 12px
        margin-left 8px
        font-weight 400

      img
        width 20px
        height 20px
        margin-right 6px

      &.node-view-title

        .blocks-title-info
          word-break break-all
          padding 14px 12px 0
          font-size 12px

  .transaction-list-search-title
    padding 0

  .mobile-table
    display block

    .transaction-list-content-table
      margin-top 0
      margin-bottom 0
      .table-rank
          width 28px
          height 28px

        .table-rank-other
          width 28px
          height 28px
          border-radius 50%
          background-color #FAFAFA
          line-height 28px
          text-align center
          color #999999
          font-size 16px
          margin 0 auto

      .ant-table-thead
        tr
          th
            font-size 13px
            border-top 0
            background-color #fff

    .mobile-title
      padding 10px 12px
      border-bottom 1px solid #e5e5e5

    .mobile-content
      padding 0px 12px 10px
      color $blue2
      font-weight 400
      word-break break-all

  .pc-table
    display none

  .node
    .blocks-title
      flex-direction column
      align-items unset
      padding 0
      .list-icon
        padding 14px 12px
        border-bottom 1px solid #e5e5e5
      .node-search-wrapper
        width 100%
        display flex
        flex-direction column
        padding 14px 12px
        .ant-btn
          align-self flex-end
          width 60px
          margin-top 12px
          height 24px
          line-height 24px
          border-radius 4px !important
          display flex
          justify-content center
          > span
            font-size 12px
        .ant-input
          height 40px
          border-radius 4px !important

        .ant-input-affix-wrapper
          .ant-input
            border-top-right-radius 4px !important
            border-bottom-right-radius 4px !important

      .node-submit-wrapper
        display flex
        align-items center
        padding 14px 12px
        .anticon-question-circle
          font-size 13px
          margin-top -2px
        > a
          font-size 13px

    .node-list-content
      .blocks-title
        flex-direction row
        align-items center
        justify-content space-between
        .list-icon
          border 0

    &.node-view
      .ant-table
        table
          width 1000px
      .pagination-mobile
        padding 16px 12px 20px

  .branch-list
    .ant-table
      table
        width 500px

  .block-out
    .ant-table
      table
        width 500px
    .blocks-title
      flex-direction column
      align-items unset
      padding 0
      .list-icon
        padding 14px 12px
        border-bottom 1px solid #e5e5e5
      .time_filter
        display flex
        padding 14px 12px
        .ant-calendar-picker
          flex 1
          .ant-calendar-picker-input
            height 40px
            border-color #dbe1e8
            border-left 0
            text-align center
            font-size 14px
            border-top-left-radius 0
            border-bottom-left-radius 0
        .time_filter-title
          display block
          height 40px
          width 88px
          text-align center
          line-height 40px
          border 1px solid #dbe1e8
          border-top-left-radius 4px
          border-bottom-left-radius 4px
          font-size 14px
  .ant-calendar-picker-container
    left 0
    right 0


