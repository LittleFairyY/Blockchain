.nodes
  .mobile-table
    display none
@media screen and (max-width: 1200px)
  .nodes
    .pc-table
      display none !important

    .transaction-list-content
      background-color transparent
      border-radius 4px

      .ant-table
        table
          width 100% !important

    .blocks-title
      margin-top 16px
      background-color white
      border-radius 5px 5px 0 0

    .mobile-table
      display block
      margin-top 0 !important

      .ant-table-row
        background-color white

      .mobile-td-node
        max-width 216px
        overflow hidden
        text-overflow ellipsis

      &.transaction-list-content-table
        .ant-table-thead
          > tr
            > th
              border-top 0

